<%- include('partials/head') %>
</head>
<body class="font-sans bg-gray-100">
  <!-- Navbar -->
 <%- include('partials/nav')%>
  <!-- Header Section -->
  <header class="text-center py-10 bg-gray-50">
    <h2 class="text-3xl font-bold text-red-700 mb-6">Here are our Registered Homes</h2>
    <ul class="space-y-6 max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% registeredHomes.forEach(home => { %>
        <li class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
          <img 
            src="<%= home.photoUrl %>" 
            alt="<%= home.houseName %>" 
            class="w-full h-48 object-cover rounded-t-lg"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-800"><%= home.houseName %></h3>
            <p class="text-gray-600"><strong>Price:</strong> ₹<%= home.price %> / night</p>
            <p class="text-gray-600"><strong>Location:</strong> <%= home.location %></p>
            <p class="text-gray-600"><strong>Rating:</strong> <%= home.rating %> ★</p>
          </div>
        </li>
      <% }) %>
    </ul>
</header>

</body>
</html>
